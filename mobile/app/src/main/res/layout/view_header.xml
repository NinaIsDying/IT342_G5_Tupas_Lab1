<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#E6E6E6"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tvBrandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wildcat's Den"
                android:textColor="#7B282A"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="24dp">

            <TextView
                android:id="@+id/btnHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#7B282A"
                android:textSize="16sp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btnVenues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venues"
                android:textColor="#7B282A"
                android:textSize="16sp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btnFaq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQ"
                android:textColor="#7B282A"
                android:textSize="16sp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAuthButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:backgroundTint="#7B282A"
                android:textColor="#F7F7F7"
                android:paddingHorizontal="18dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:backgroundTint="#F7F7F7"
                android:textColor="#7B282A"
                android:paddingHorizontal="18dp"
                android:paddingVertical="8dp"
                app:strokeColor="#7B282A"
                app:strokeWidth="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutUserButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:backgroundTint="#7B282A"
                android:textColor="#F7F7F7"
                android:paddingHorizontal="18dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/btnProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/default_profile"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_profile_border"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    </LinearLayout>
</merge>